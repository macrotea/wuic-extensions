<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE wuic SYSTEM 'http://capgemini.com/wuic/wuic.dtd'>
<wuic>
	<resource-factory-builders>
        <resource-factory-builder id="ftpFactoryBuilder" class="com.github.wuic.ftp.FtpWuicResourceFactoryBuilder" regex="true">
            <properties>
                <property key="c.g.wuic.ftpServerPort">2221</property>
                <property key="c.g.wuic.ftpUsername">wuicuser</property>
                <property key="c.g.wuic.ftpPassword">wuicpassword</property>
            </properties>
        </resource-factory-builder>
	</resource-factory-builders>
	<groups>
		<group id="css-image" configuration="yuicompressor-css" default-builder="ftpFactoryBuilder">
            <file>.*.css</file>
		</group>
	</groups>
	<configurations>
        <configuration id="yuicompressor-css" type="CSS">
            <aggregate>true</aggregate>
            <charset>UTF-8</charset>
            <compress>true</compress>
            <yuiLineBreakPos>-1</yuiLineBreakPos>
        </configuration>
	</configurations>
</wuic>